<h2><%= @song.name %></h2>

<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<p>By <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
<h4>Genre(s):</h4>
<% @song.genres.each do |genre| %>
<a href="/genres/<%= genre.slug %>"><%= genre.name.titleize %></a>
<% end %>